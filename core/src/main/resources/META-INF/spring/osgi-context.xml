<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:context="http://www.springframework.org/schema/context"
             xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
             xmlns="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
             xsi:schemaLocation="http://www.eclipse.org/gemini/blueprint/schema/blueprint
       http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/osgi-compendium
       http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">
    <context:annotation-config/>

    <osgix:cm-properties id="properties" persistent-id="ru.drudenko.ads.Core">
    </osgix:cm-properties>

    <service ref="adsServicesCore"
             interface="ru.drudenko.ads.api.AdsService"/>

    <list interface="ru.drudenko.ads.spi.AdsParser" id="adsParsers" cardinality="0..N"/>
</beans:beans>